    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.MemberName</td>
                <td>@booking.CourtName</td>
                <td>@booking.Date.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>